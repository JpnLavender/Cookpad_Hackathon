<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.text_field :mail, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :誕生日 %>
    <%= f.text_field :birthday, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :男性 %>
    <%= radio_button 'sex', 'category', '0', {:tabindex => 0} %><br />
    <%= f.label :女性 %>
    <%= radio_button 'sex', 'category', '1', {:tabindex => 1} %><br />
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
