    <%= f.label :パスワード %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %>
    <%= f.password_field :password_confirmation %>
  </div>


  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :誕生日 %>
    <%= f.text_field :birthday %>
  </div>

  <div class="field">
    <%= f.label :性別 %>
    <%= f.number_field :sex %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
