<p id="notice"><%= notice %></p>

<h1>レシピ一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Catch copy</th>
      <th>People</th>
      <th>Point</th>
      <th>Rarly life</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
        <%= image_tag recipe.image.thumb.url %>
        </td>
        <td><%= recipe.title %></td>
        <td><%= recipe.catch_copy %></td>
        <td><%= recipe.people %></td>
        <td><%= recipe.point %></td>
        <td><%= recipe.rarly_life %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= paginate(@recipes) %>
